# Configuration for {{ agent_name }}
# Generated by AutoGenesis Agent Factory

# Logging configuration
logging:
  level: {{ config_points.logging.level }}
  format: {{ config_points.logging.format }}
  file_path: {{ config_points.logging.file_path }}

# Resource limits
resource_limits:
  max_memory_mb: {{ config_points.resource_limits.max_memory_mb }}
  max_cpu_percent: {{ config_points.resource_limits.max_cpu_percent }}

{% if config_points.source %}
# Source configuration
source:
  type: {{ config_points.source.type }}
  value: {{ config_points.source.value }}
{% endif %}

{% if config_points.output %}
# Output configuration
output:
  format: {{ config_points.output.format }}
  destination_type: {{ config_points.output.destination_type }}
  destination_value: {{ config_points.output.destination_value }}
{% endif %}

{% if config_points.constraints %}
# Constraints
constraints:
{% for key, value in config_points.constraints.items() %}
{% if key != "configurable" %}
  {{ key }}: {{ value }}
{% endif %}
{% endfor %}
{% endif %}

{% if config_points.pipeline %}
# Pipeline configuration
pipeline:
  max_retries: {{ config_points.pipeline.max_retries }}
  retry_delay_seconds: {{ config_points.pipeline.retry_delay_seconds }}
  parallel_stages: {{ config_points.pipeline.parallel_stages }}
{% endif %}

{% if config_points.api %}
# API configuration
api:
  host: {{ config_points.api.host }}
  port: {{ config_points.api.port }}
  debug: {{ config_points.api.debug }}
  workers: {{ config_points.api.workers }}
  timeout_seconds: {{ config_points.api.timeout_seconds }}
{% endif %}

{% if config_points.events %}
# Events configuration
events:
  max_queue_size: {{ config_points.events.max_queue_size }}
  worker_threads: {{ config_points.events.worker_threads }}
{% endif %}

{% if config_points.actions %}
# Action-specific configuration
actions:
{% for action_id, action_config in config_points.actions.items() %}
  {{ action_id }}:
{% for key, value in action_config.items() %}
{% if key != "configurable" %}
    {{ key }}: {{ value }}
{% endif %}
{% endfor %}
{% endfor %}
{% endif %}